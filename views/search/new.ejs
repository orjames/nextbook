<h1 class="card-header"><i class="fas fa-search"></i> Search</h1>

<form action="/search" method="GET">
  <div class="input-group mb-3 ">
    <div class="input-group-prepend ">
      <label class="input-group-text text-white bg-secondary" for="inputGroupSelect01">Search By</label>
    </div>
    <select class="custom-select text-white bg-dark" id="inputGroupSelect01">
      <option selected>Search By...</option>
      <option value="name">Book Title</option>
      <option value="author">Author</option>
      <option value="category">Genre/Category</option>
    </select>
  </div>

  <div id='inputDiv' class="input-group mb-3">
      <input type="text" class="form-control text-white bg-dark" placeholder="" id="inputBox" name="" aria-label="" aria-describedby="button-addon2" required='true'>
      <div class="input-group-append">
        <button class="btn btn-outline-secondary text-white bg-secondary" type="submit" id="button-addon2">Search</button>
      </div>
  </div>


  <script type="text/javascript" src="/js/app.js"></script>
</form>